.kdmr.note-wide
  %span.menu
    = controller_name+action_name=='indexindex'? 'ABOUT': link_to('ABOUT', '/')
  - if signed_in?
    %span.menu
      = action_name=='user' && current_user==@focus_user.user ? 'MY PAGE': link_to('MY PAGE', user_page_path)
    %span.menu
      = controller_name+action_name=='dashboardindex'? 'DASHBOARD': link_to('DASHBOARD', '/dashboard')
    %span.menu
      = link_to 'SIGNOUT', '#'
  - else
    %span.menu
      = link_to 'SIGN IN WITH TWITTER', '/auth/twitter'

- if flash[:notice_volatile]
  .kdmr.notice.volatile
    = flash[:notice_volatile]

- if flash[:notice]
  .kdmr.notice
    = flash[:notice]
