!!!
%html
  %head
    %title RSSS | Dashboard
    = stylesheet_link_tag :all
    = javascript_include_tag 'js_class'
    = javascript_include_tag 'bluff'
    = javascript_include_tag 'excanvas'
    = csrf_meta_tag
    %link{:rel=>"icon", :type=>"image/png", :href=>"/favicon.png"}
  %body
    #head
      %img.icon{:src=>@user.profile_image_url}
        %h1 Dashboard
      %div{:style=>"clear: both;"}
        .description #{@user.screen_name}(#{@user.oauth_name})
        .description #{@user.oauth_description}

    .kdmr.note-wide
      %span.menu
        = action_name=='index'? 'Dashboard': link_to('Dashboard', '/dashboard')
      %span.menu
        = link_to 'My Summaries', '/'+@user.screen_name
      %span.menu
        = link_to 'Signout', '/auth/signout'

    - if flash[:notice]
      .kdmr.notice
        = flash[:notice]
  
    = yield

    #foot
      .kdmr.note-wide{:style=>"width: 100%; text-align: right;"}
        = link_to 'RSSS', '/'
        Developed by 
        = link_to 'HIBARIYA', 'http://twitter.com/pussy_cat'
        ( in 
        %a{:href=>"http://github.com/hibariya/rsss", :target=>"_blank"} Github )

    %script{:type=>"text/javascript"}
