!!!
%html
  %head
    %title RSSS | RSS Feed Summaries
    = stylesheet_link_tag :all
    = javascript_include_tag 'js_class'
    = javascript_include_tag 'bluff'
    = javascript_include_tag 'excanvas'
    = csrf_meta_tag
    %link{:rel=>"icon", :type=>"image/png", :href=>"/favicon.png"}
  %body
    #head
      %img.icon{:src=>@user.profile_image_url}
      %h1 
        #{@user.screen_name}'s RSS Summaries
      %div{:style=>"clear: both;"}
      .description
        = @user.screen_name
        (#{@user.oauth_name})
        
      .description
        = @user.oauth_description

    - if flash[:note]
      .kdmr.notice
        = flash[:notice]

    = yield

    #foot
      .kdmr.note-wide{:style=>"width: 100%; text-align: right;"}
        = link_to 'RSSS', '/'
        Developed by 
        = link_to 'HIBARIYA', 'http://twitter.com/pussy_cat'
        ( in 
        %a{:href=>"http://github.com/hibariya/rsss", :target=>"_blank"} Github )

